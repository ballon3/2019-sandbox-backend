{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build (production)",
            "type": "shell",
            "command": "bin/build.sh -p",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": {
				"base": "$gcc",
				"fileLocation": "absolute"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
        },
        {
            "label": "start (production)",
            "type": "shell",
            "command": "bin/start.sh -p",
            "dependsOn": ["build (production)"],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": {
				"base": "$gcc",
				"fileLocation": "absolute"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
        },
        {
            "label": "browse (production)",
            "type": "shell",
            "command": "google-chrome 0.0.0.0:8000",
            "dependsOn": ["start (production)"],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": "absolute"
            },
			"group": {
				"kind": "build",
				"isDefault": true
			},
        },
        {
            "label": "build (development)",
            "type": "shell",
            "command": "bin/build.sh -d"
        },
        {
            "label": "start (development)",
            "type": "shell",
            "command": "bin/start.sh -d"
        }
    ]
}